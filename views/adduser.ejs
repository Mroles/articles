<!DOCTYPE html>
<head>    
     <title>Add User</title>   
</head>

<body>
<section class="section single-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="custombox clearfix">
                        <h4 class="small-title">Add New User</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-wrapper" action="/admin/users/add" method="POST">
                                    <input type="text" name="username" class="form-control" placeholder="Enter your username">
                                    <input type="text" name="fullname" class="form-control" placeholder="Enter your full name">
                                    <textarea name="aboutme" class="form-control" placeholder="Enter something about you"></textarea>
                                    <input type="password" name="password" class="form-control" placeholder="Enter Your Password">
                                    <input type="password" name="confirm-password" class="form-control" placeholder="Confirm Your Password">

                                    <button type="submit" class="btn btn-primary">Add User</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- end page-wrapper -->
            </div><!-- end col -->

            <!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>

<script src="js/jquery.min.js"></script>
    <script src="js/tether.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/custom.js"></script>
</body>